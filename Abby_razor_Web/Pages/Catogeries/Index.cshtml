@page
@model Abby_razor_Web.Pages.Shared.Catogeries.IndexModel
@{
}
<div class="container p-3" >
<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">Catogery List</h2>
    </div>
        <div class="col-6 text-end" style="padding-left:33px ">
            <a asp-page="Create" class="btn btn-primary text-end"> <i class="bi bi-plus-circle"></i>&nbsp;&nbsp;Create New CAtogery</a>
        </div>
</div>

 


<table class="table table-bordered table-striped " style="width:100%">
	  <thead>
    <tr>
       
      
      <th scope="col">Catogery Name</th>
      <th scope="col">Display Order</th>
      <th scope="col"></th>
       
    </tr>
  </thead>
  <tbody> 
   @foreach(var obj in Model.Catogeries){
      <tr>

         <td width="50%">@obj.Name</td>
          <td width="30%">@obj.DisplayOrder</td>

                    <td>
                        <div class="w-75 btn-group" role="group"  >
           <a asp-page="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2 " title="Edit">
               <i class="bi bi-pencil-fill" ></i> </a>
           <a asp-page="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2 " title="Delete">
               <i class="bi bi-trash-fill"></i> </a></div>
          </td>

      </tr>
   }
   
    
  </tbody>
    </table>
</div>